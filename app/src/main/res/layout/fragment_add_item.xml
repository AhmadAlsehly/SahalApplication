                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="btnImage1"
                    android:text="+"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="444dp" />


